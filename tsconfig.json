{
  "compilerOptions": {
    "outDir": "./lib/",
    "moduleResolution": "node",
    "lib": ["es2017", "dom", "dom.iterable"],
    "target": "es5",
    "strict": true,
    "types": ["vue", "vuex", "node"],
    "declaration": true,
    "noImplicitAny": false,
    "inlineSourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*"]
}
